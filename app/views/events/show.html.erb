<div class="container-fluid">
<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 <div class="well profile event">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%=@event.title%></h2>
                    <p><strong>Organization:</strong> <%= link_to @event.organization.title, organization_path(@event.organization)%></p>
                    <p><strong>Description:</strong> <%=@event.description%></p>
                </div>
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                          <%= image_tag @event.avatar.url(:thumb), class: "img-md image-responsive " %>
                    </figure>
                </div>
                </div>
                <div class="col-xs-12 divider">
                <div class="col-xs-12 col-sm-4">
                    <h3><strong>Contacts</strong></h3>
                    <p><strong>Email: </strong><%=@event.organization.user.email%></p>
										<p><strong>Phone Number: </strong><%=@event.organization.user.phone_number%></p>
                </div>
            </div>
						<% if @current_user.id == @event.organization.user.id  %>
	             <div class="row">
	               <div align="center" class="center-block col-xs-offset-4">
	                 <%= link_to "Close Event", event_path(@event), method: "delete", class: "btn btn-default btn-danger btn-primary " %>
	             </div>
	             </div>
					 <% end %>
    	 </div>
		</div>
	</div>
</div>
