<%= render "shared/errors", obj: @project %>
<div align="center" class="container container-max form">


  <h1 class="new-title-project">New Project</h1>

  <%= form_for @project do |t| %>
    <div class="form-group">
      <p>Title:</p>
      <%= t.text_field :title , placeholder: "Project X" , class: "form-control" %>
    </div>
    <div class="form-group">
      <p>Description:</p>
      <%= t.text_area :description , rows:"4" , placeholder: "This project makes someones life easier!" , class: "form-control" %>
    </div>
    <div class="form-group">
      <p>Category:</p>
      <%= t.text_field :category , placeholder: "Web Development, Mobile Development ..." , class: "form-control", id: "category" %>
    </div>
    <div class="form-group">
      <p>Skills:</p>
      <%= t.text_field :skills , placeholder: "Android, Ruby On Rails" , class: "form-control", id: "skills" %>
    </div>
    <div class="form-group">
      <%= t.file_field :avatar %>
    </div>
    <div class="form-group">
      <%= t.submit "Create Project" , class: "btn btn-primary new-buttom-project" %>
    </div>
  <% end %>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#skills').tokenfield()
    $('#category').tokenfield()
  });
</script>
