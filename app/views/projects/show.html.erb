<div class="container-fluid">
<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 <div class="well profile proj">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2> <%=@project.title%></h2>
                    <p><strong>Created by: </strong><%= link_to @project.user.name, user_path(@project.user) %></p>
                    <p><strong>Categories:</strong> <%=@project.category%></p>
                    <p><strong>Skills:</strong> <%=@project.skills%></p>
                    <p><strong>Description:</strong> <%=@project.description%></p>
                </div>
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                          <%= image_tag @project.avatar.url(:thumb), class: "img-md image-responsive " %>
                    </figure>
                </div>
                </div>
                <div class="col-xs-12 divider">
                <div class="col-xs-12 col-sm-4">
                    <h3><strong>Contacts</strong></h3>
                    <p><strong>Email: </strong><%=@project.user.email%></p>
										<p><strong>Telephone: </strong><%=@project.user.phone_number%></p>

                      <% if @current_user.id == @project.user.id  %>
                <% end %>

                </div>
            </div>
            <% if @current_user.id != @project.user.id  %>

              <% if @interests %>
              <div class="row">
                <div class="col-xs-2 center-block col-xs-offset-4">

              <% if @interests.include?(@current_user.id.to_s) %>

                <%= link_to "Not Interest" , uninterested_path(), method: :delete, class: "btn-default btn btn-danger" %>
                <% end %>
              <% else %>
                  <%= link_to "Show Interest" , interested_path(), method: :post, class: "btn-default btn btn-success" %>
              <% end %>
            </div>
            </div>
            </div>
            <% else %>
          </div>
          <div class="container-fluid">
              <% if @people %>
              <h2>Interested collabers:</h2>
              <div class="row flex-between">
                  <% @people.each do |t| %>
                      <div class="card">
                          <div class="avatar">
                              <%= image_tag t.avatar.url(:thumb), class: "image-responsive" %>
                          </div>
                          <div class="content">
                              <%= link_to t.name , user_path(t), class: "btn btn-default" %>
                          </div>
                      </div>
                    <% end %>
              </div>
              <% end %>
          <% end %>
    	 </div>
		</div>
	</div>
</div>

