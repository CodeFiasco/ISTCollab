
<div align="center" class="container container-max form">

<h1 class="edit-title-profile"><%= @user.name %></h1>

<%= form_for @user do |t| %>

  <div class="form-group">
    <p>Name:</p>
    <%= t.text_field :name , placeholder: "Random" , class: "form-control" %>
  </div>

  <div class="form-group">
    <p>Email:</p>
    <%= t.email_field :email , placeholder: "email@example.com" , class: "form-control" %>
  </div>

  <div class="form-group">
    <p>Course:</p>
    <%= t.text_field :course , placeholder: "LEE, METI ..." , class: "form-control" %>
  </div>

  <div class="form-group">
    <p>Phone Number:</p>
    <%= t.text_field :phone_number , placeholder: "888 222 555" , class: "form-control" %>
  </div>
  <div class="form-group">
    <p>Skills:</p>
    <%= t.text_field :skills, class: "form-control", id: "skills" %>
  </div>
  <div class="form-group">
    <p>Interests:</p>
    <%= t.text_field :interests, class: "form-control", id: "interests" %>
  </div>
  <div class="form-group">
    <p>Github:</p>
    <%= t.text_field :github_link, class: "form-control", id: "skills" %>
  </div>
  <div class="form-group">
    <p>Linkedin:</p>
    <%= t.text_field :linkedin_link, class: "form-control", id: "skills" %>
  </div>
  <div class="form-group">
    <%= t.file_field :avatar %>
  </div>
  <div class="form-group ">
    <%= t.submit "Save" , class: "btn btn-lg btn-primary edit-buttom-save" %>
  </div>

<% end %>

</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('#skills').tokenfield()
    $('#skills').tokenfield('setTokens', '<%= @user.skills %>');
    $('#interests').tokenfield()
    $('#interests').tokenfield('setTokens', '<%= @user.interests %>');
  });
</script>
