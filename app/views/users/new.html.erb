
<h1>Sign Up</h1>



<div align="center" class="container col-xs-2 col-md-4">

<%= form_for @user do |t| %>
  <div class="form-group">
    <p>Name:</p>
    <%= t.text_field :name , placeholder: Random %>
  </div>
  <div class="form-group">
    <p>Email:</p>
    <%= t.email_field :email , placeholder: "email@example.com" , class: "form-control" %>
  </div>
  <div class="form-group">
    <p>Course:</p>
    <%= t.text_field :course , placeholder: "LEE, METI ..."  %>
  </div>
  <div class="form-group">
    <p>Phone Number:</p>
    <%= t.text_field :phone_number , placeholder: "888 222 555"  %>
  </div>
  <div class="form-group">
    <p>Password:</p>
    <%= t.password_field :password_digest %>
  </div>
  <div class="form-group">
    <%= t.submit "Sign Up" , class: "btn btn-primary" %>
  </div>
<% end %>

</div>
